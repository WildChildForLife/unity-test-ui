extends default



block content
    div.container-fluid
        h2 #{title}
        table.table.table-dark.table-hover
            thead
                tr
                    each header in ['id', 'First Name', 'Last Name', 'Email', 'Session']
                        th #{header}
            tbody
                each player in players
                    tr
                        td
                            a(href="player/" + player.id) #{player.id}
                        td #{player.firstname}
                        td #{player.lastname}
                        td #{player.email}
                        td
                            a(href="/sessions/" + player.sessionId) #{player.sessionId}